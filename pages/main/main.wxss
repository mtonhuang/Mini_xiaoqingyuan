.content .content-main {
 background-size: 100% 100%;
 height: 400rpx;
 position: relative;
}


.footer {
  height:70rpx;
  padding: 35rpx;
  background-size: 100% 100%;
}
.footer .share-btn {
  width: 40%;
  height: 70rpx;
  line-height: 70rpx;
  color: white;
  font-size: 90%;
