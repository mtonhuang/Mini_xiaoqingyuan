.content  .dialog {
  background-size: 100% 100%;
  position: absolute;
  width: 270rpx;
  height: 80rpx; 
  word-wrap:break-word;
  padding: 30rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  letter-spacing: 3rpx;
  text-align: center;
}

.content .friend.odd .dialog:first-child{
  left: 37%;
  top:50rpx;
}
.content .friend.odd .dialog:nth-child(2) {
  left: 23%;
  top:60%;
}
.content .friend.even .dialog:first-child{
  left: 7%;
  top:40rpx;
}
.content .friend.even .dialog:nth-child(2) {
  left:38%;
  top:55%;
}

.content .lover.even .dialog:first-child{
  left: 20%;
  top:40rpx;
}
.content .lover.even .dialog:nth-child(2) {
  left:34%;
  top:62%;
}
.content .lover.odd .dialog:first-child{
  left: 35%;
  top:50rpx;
}
.content .lover.odd .dialog:nth-child(2) {
  left: 23%;
  top:60%;
}

.content .friend .dialog .input {
   width: 100%;
   display: inline-block;
   height: 80rpx;
   line-height: 40rpx;  
}
.content .friend .dialog .submit {
  position: absolute;
  top: 0;
  right: -50rpx;
  height: 50rpx;
  width: 50rpx;
}

.content  .cloud .dialog {
  background-size: 100% 100%;
  position: absolute;
  width: 270rpx;
  height: 160rpx; 
  word-wrap:break-word;
  padding: 30rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  letter-spacing: 3rpx;
  text-align: center;
}
.content .cloud.odd  .dialog:first-child,.content .cloud.even  .dialog:first-child {
  left: 5%;
  top:10%;  
  width: 270rpx;
  height: 80rpx; 
  padding: 50rpx 40rpx 70rpx 110rpx;
}
.content .cloud.odd  .dialog:nth-child(2),.content .cloud.even  .dialog:nth-child(2) {
  left: 50%;
  top:35%;  
  width: 270rpx;
  height: 80rpx; 
  padding: 110rpx 60rpx 40rpx 40rpx;
}
.content .cloud.even  .dialog:first-child {
  left: 45%;
}
.content .cloud.even  .dialog:nth-child(2) {
  left: 5%;
