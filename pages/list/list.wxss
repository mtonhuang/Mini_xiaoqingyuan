.authbtn {
   color: hsl(88, 70%, 30%) !important;
    background-color: hsl(88, 70%, 60%);
    -webkit-box-shadow: inset rgba(255,254,255,0.6) 0 0.3em .3em, inset rgba(0,0,0,0.15) 0 -0.1em .3em, /* inner shadow */ hsl(88, 70%, 40%) 0 .1em 3px, hsl(88, 70%, 30%) 0 .3em 1px, /* color border */ rgba(0,0,0,0.2) 0 .5em 5px;
    -moz-box-shadow: inset rgba(255,254,255,0.6) 0 0.3em .3em, inset rgba(0,0,0,0.15) 0 -0.1em .3em, /* inner shadow */ hsl(88, 70%, 40%) 0 .1em 3px, hsl(88, 70%, 30%) 0 .3em 1px, /* color border */ rgba(0,0,0,0.2) 0 .5em 5px;
    box-shadow: inset rgba(255,254,255,0.6) 0 0.3em .3em, inset rgba(0,0,0,0.15) 0 -0.1em .3em, /* inner shadow */ hsl(88, 70%, 40%) 0 .1em 3px, hsl(88, 70%, 30%) 0 .3em 1px, /* color border */ rgba(0,0,0,0.2) 0 .5em 5px;
    position: absolute;
    width: 30%;
    left: 35%;
    top: 20%;
    z-index: 5;
}

.container {
  background-color: rgb(253,221,226);
  height: 100vh;
  overflow: hidden;
  padding: 1.5vh
}
.item-box {
  position: relative;
  width: 100%;
  height: 23.125vh;
}

.item-box .bg {
   width: 100%;
   height: 100%;
}
.item-box .text-box {
   position: absolute;
   top: 0;
   left: 0;
   width: 26%;
   height: 70rpx;
   padding: 0 25rpx;
   line-height: 70rpx;
   font-size: 30rpx;
   overflow: hidden;
   border-radius: 999px;
   margin: 3% ;
   z-index: 1;
   background-color: rgba(253,221,226 ,.7);
}
.item-box .text-box .fl {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 10rpx 10rpx 0;
  float: left;
}
.toRank {
  position: absolute;
  bottom: 40rpx;
  right: 20rpx;
  width: 120rpx;
  height: 55rpx;
  line-height: 55rpx;
  padding:0rpx 20rpx 0rpx 70rpx;
  font-size: 70%;
  background-color: rgba(253,221,226 ,.7);
  text-align: center;
  border-radius: 999rpx;
 
}
.toRank image {
  width: 40rpx;
  position: absolute;
  height: 40rpx;
  margin: 7.5rpx 0 ;
  left: 30rpx;
}
